/* CSS Variables - EDIT these to customize the theme */
:root {
  --primary: #1a1a1a;
  --accent: #f5f5dc;
  --poster-bg: #2a2a2a;
  --grain-opacity: 0.15;
  --text-light: #f5f5dc;
  --text-dark: #1a1a1a;
  --glass: rgba(245, 245, 220, 0.1);
}

/* Reset and Base Styles */
* {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  margin: 0;
  padding: 0;
  font-family: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background-color: var(--primary);
  color: var(--text-light);
  overflow-x: hidden;
}

#root {
  margin: 0;
  padding: 0;
  max-width: none;
  text-align: left;
}

/* LOADER STYLES */
.loader-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.4s ease-out;
}

.loader-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: var(--primary);
  transition: background-color 0.2s ease;
}

.loader-overlay.blink1 .loader-background,
.loader-overlay.blink2 .loader-background {
  background-color: var(--accent);
}

.loader-overlay.fadeout {
  opacity: 0;
}

.loader-content {
  position: relative;
  z-index: 2;
}

.loader-text {
  font-size: 3rem;
  font-weight: 900;
  font-family: 'Playfair Display', serif;
  letter-spacing: 0.2em;
  color: var(--text-light);
  transition: color 0.2s ease;
}

.loader-overlay.blink1 .loader-text,
.loader-overlay.blink2 .loader-text {
  color: var(--text-dark);
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .loader-overlay {
    animation: none;
    transition: none;
  }
}

/* HERO SECTION - POSTER STYLE */
.hero-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 50%, #1a1a1a 100%);
  overflow: hidden;
}

/* Film Grain Effect */
.poster-grain::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: var(--grain-opacity);
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  mix-blend-mode: overlay;
  pointer-events: none;
  z-index: 1;
}

/* Disable grain on low power devices */
@media (prefers-reduced-motion: reduce) {
  .poster-grain::before {
    display: none;
  }
}

.hero-content {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 1200px;
  padding: 2rem;
  text-align: center;
}

.vignette {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(ellipse at center, transparent 30%, rgba(0,0,0,0.7) 100%);
  pointer-events: none;
  z-index: 1;
}

.poster-text-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.poster-quotes {
  position: absolute;
  font-size: 0.8rem;
  letter-spacing: 0.1em;
  opacity: 0.6;
  font-weight: 300;
  writing-mode: vertical-rl;
  text-orientation: mixed;
}

.top-left {
  top: 2rem;
  left: 2rem;
}

.top-right {
  top: 2rem;
  right: 2rem;
}

.hero-main-content {
  position: relative;
  z-index: 3;
}

.poster-title {
  font-family: 'Playfair Display', serif;
  font-weight: 900;
  line-height: 0.85;
  margin: 0 0 2rem;
  color: var(--text-light);
  text-shadow: 0 4px 20px rgba(0,0,0,0.5);
}

.title-line-1 {
  display: block;
  font-size: clamp(2.5rem, 8vw, 6rem);
  letter-spacing: 0.02em;
}

.title-line-2 {
  display: block;
  font-size: clamp(3rem, 10vw, 8rem);
  letter-spacing: -0.02em;
}

.title-line-3 {
  display: block;
  font-size: clamp(3rem, 10vw, 8rem);
  letter-spacing: -0.02em;
}

.stylized-letter {
  font-family: 'Luxurious Script', cursive;
  font-size: 1.2em;
  color: var(--accent);
  text-shadow: 0 0 20px rgba(245, 245, 220, 0.5);
  display: inline-block;
  transform: scale(1.1);
}

.poster-subtitle {
  margin: 2rem 0 3rem;
  font-size: clamp(0.9rem, 2vw, 1.1rem);
  letter-spacing: 0.2em;
  opacity: 0.8;
  font-weight: 300;
}

.poster-subtitle p {
  margin: 0.5rem 0;
}

.poster-cta {
  background: transparent;
  border: 2px solid var(--accent);
  color: var(--accent);
  padding: 1rem 2.5rem;
  font-size: 1rem;
  letter-spacing: 0.1em;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: 'Manrope', sans-serif;
}

.poster-cta:hover,
.poster-cta:focus {
  background: var(--accent);
  color: var(--text-dark);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(245, 245, 220, 0.3);
}

.poster-credits {
  position: absolute;
  bottom: 2rem;
  left: 2rem;
  right: 2rem;
  display: flex;
  justify-content: space-between;
  font-size: 0.8rem;
  letter-spacing: 0.1em;
  opacity: 0.6;
}

.social-links-hero {
  position: absolute;
  top: 2rem;
  right: 2rem;
  display: flex;
  gap: 1rem;
  z-index: 4;
}

.social-link {
  color: var(--text-light);
  font-size: 1.5rem;
  transition: all 0.3s ease;
  text-decoration: none;
}

.social-link:hover,
.social-link:focus {
  transform: scale(1.2);
}

.social-link.instagram:hover,
.social-link.instagram:focus {
  color: #e91e63;
  filter: drop-shadow(0 0 10px rgba(233, 30, 99, 0.5));
}

.social-link.linkedin:hover,
.social-link.linkedin:focus {
  color: #0077b5;
  filter: drop-shadow(0 0 10px rgba(0, 119, 181, 0.5));
}

.social-link.twitter:hover,
.social-link.twitter:focus {
  color: #1da1f2;
  filter: drop-shadow(0 0 10px rgba(29, 161, 242, 0.5));
}

/* SECTION STYLES */
.section {
  min-height: 100vh;
  padding: 5rem 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-content {
  width: 100%;
  max-width: 1200px;
}

.section-title {
  font-family: 'Playfair Display', serif;
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 700;
  margin-bottom: 3rem;
  text-align: center;
  color: var(--accent);
}

/* FEATURED WORKS SECTION */
.featured-section {
  background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
}

.featured-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.featured-card {
  position: relative;
  cursor: pointer;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.4s ease;
  transform-style: preserve-3d;
}

.featured-card:hover {
  transform: translateY(-10px) rotateX(5deg) rotateY(5deg);
  box-shadow: 0 20px 40px rgba(0,0,0,0.3);
}

.card-image {
  position: relative;
  aspect-ratio: 3/4;
  overflow: hidden;
}

.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.featured-card:hover .card-image img {
  transform: scale(1.1);
}

.card-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.8));
  color: white;
  padding: 2rem 1.5rem 1.5rem;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.featured-card:hover .card-overlay {
  transform: translateY(0);
}

.card-overlay h3 {
  font-size: 1.25rem;
  margin: 0 0 0.5rem;
  font-weight: 600;
}

.card-overlay p {
  margin: 0;
  opacity: 0.8;
  font-size: 0.9rem;
}

/* ABOUT SECTION */
.about-section {
  background: var(--primary);
}

.about-card {
  background: var(--glass);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(245, 245, 220, 0.1);
  border-radius: 20px;
  padding: 3rem;
  text-align: center;
}

.about-content {
  max-width: 800px;
  margin: 0 auto;
}

.about-text {
  font-size: 1.1rem;
  line-height: 1.7;
  margin-bottom: 2rem;
  opacity: 0.9;
}

.about-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 3rem;
  gap: 2rem;
  flex-wrap: wrap;
}

.stat {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 3rem;
  font-weight: 900;
  color: var(--accent);
  font-family: 'Playfair Display', serif;
}

.stat-label {
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  opacity: 0.8;
}

/* BLOG SECTION */
.blog-section {
  background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
}

.blog-card {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
  background: var(--glass);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(245, 245, 220, 0.1);
  border-radius: 20px;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.blog-card:hover {
  transform: translateY(-5px);
}

.blog-image {
  aspect-ratio: 4/3;
  overflow: hidden;
}

.blog-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.blog-card:hover .blog-image img {
  transform: scale(1.05);
}

.blog-content {
  padding: 2rem;
}

.blog-category {
  color: var(--accent);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.blog-title {
  font-family: 'Playfair Display', serif;
  font-size: 1.5rem;
  margin: 1rem 0;
  color: var(--text-light);
}

.blog-excerpt {
  line-height: 1.6;
  opacity: 0.8;
  margin-bottom: 2rem;
}

.blog-cta {
  color: var(--accent);
  text-decoration: none;
  font-weight: 600;
  border-bottom: 2px solid var(--accent);
  transition: all 0.3s ease;
}

.blog-cta:hover,
.blog-cta:focus {
  color: var(--text-light);
  border-bottom-color: var(--text-light);
}

/* CONTACT SECTION */
.contact-section {
  background: var(--primary);
}

.contact-content {
  text-align: center;
  max-width: 600px;
  margin: 0 auto;
}

.contact-subtitle {
  font-size: 1.2rem;
  opacity: 0.8;
  margin-bottom: 3rem;
}

.contact-methods {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  margin: 3rem 0;
}

.contact-method {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  padding: 1.5rem;
  background: var(--glass);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(245, 245, 220, 0.1);
  border-radius: 12px;
  transition: transform 0.3s ease;
}

.contact-method:hover {
  transform: translateX(10px);
}

.contact-method i {
  font-size: 1.5rem;
  color: var(--accent);
  width: 30px;
  text-align: center;
}

.method-label {
  display: block;
  font-size: 0.9rem;
  opacity: 0.7;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.method-value {
  display: block;
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-light);
  text-decoration: none;
}

.method-value:hover {
  color: var(--accent);
}

.social-links-contact {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin: 3rem 0;
}

.contact-cta {
  background: var(--accent);
  color: var(--text-dark);
  border: none;
  padding: 1rem 3rem;
  font-size: 1.1rem;
  font-weight: 600;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: 'Manrope', sans-serif;
}

.contact-cta:hover,
.contact-cta:focus {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(245, 245, 220, 0.3);
}

/* SCROLLER STYLES */
.scroller-container {
  position: fixed;
  z-index: 100;
}

.desktop-scroller {
  right: 2rem;
  top: 50%;
  transform: translateY(-50%);
  display: block;
}

.mobile-scroller {
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: none;
}

.scroller-track {
  display: flex;
  gap: 1rem;
  padding: 1rem;
  background: var(--glass);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(245, 245, 220, 0.1);
  border-radius: 50px;
}

.vertical {
  flex-direction: column;
  max-height: 300px;
  overflow-y: auto;
}

.horizontal {
  flex-direction: row;
  max-width: 300px;
  overflow-x: auto;
}

.scroller-item-wrapper {
  position: relative;
}

.scroller-item {
  width: 50px;
  height: 50px;
  border: none;
  background: transparent;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  color: var(--text-light);
  font-size: 1.2rem;
  position: relative;
}

.scroller-item:hover,
.scroller-item:focus {
  background: var(--accent);
  color: var(--text-dark);
  transform: scale(1.1);
}

.scroller-item.active {
  background: var(--accent);
  color: var(--text-dark);
  box-shadow: 0 0 20px rgba(245, 245, 220, 0.3);
}

.scroller-tooltip {
  position: absolute;
  left: -120px;
  top: 50%;
  transform: translateY(-50%);
  background: var(--primary);
  color: var(--text-light);
  padding: 0.5rem 1rem;
  border-radius: 8px;
  font-size: 0.9rem;
  white-space: nowrap;
  opacity: 0;
  animation: tooltipShow 0.2s ease forwards;
  pointer-events: none;
  border: 1px solid rgba(245, 245, 220, 0.2);
}

.scroller-tooltip::after {
  content: '';
  position: absolute;
  right: -8px;
  top: 50%;
  transform: translateY(-50%);
  border: 4px solid transparent;
  border-left-color: var(--primary);
}

@keyframes tooltipShow {
  from {
    opacity: 0;
    transform: translateY(-50%) translateX(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }
}

/* LIGHTBOX STYLES */
.lightbox-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10px);
  animation: lightboxShow 0.3s ease;
}

@keyframes lightboxShow {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.lightbox-container {
  position: relative;
  max-width: 90vw;
  max-height: 90vh;
  background: var(--primary);
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid rgba(245, 245, 220, 0.1);
}

.lightbox-close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: transparent;
  border: none;
  color: var(--text-light);
  font-size: 1.5rem;
  cursor: pointer;
  z-index: 1001;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.lightbox-close:hover,
.lightbox-close:focus {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(1.1);
}

.lightbox-content {
  display: grid;
  grid-template-columns: 1fr 400px;
  min-height: 500px;
}

.lightbox-image-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
}

.lightbox-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.lightbox-info {
  padding: 2rem;
  background: var(--primary);
  display: flex;
  flex-direction: column;
}

.lightbox-category {
  color: var(--accent);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: 0.5rem;
}

.lightbox-title {
  font-family: 'Playfair Display', serif;
  font-size: 2rem;
  margin-bottom: 1.5rem;
  color: var(--text-light);
}

.lightbox-description {
  line-height: 1.6;
  margin-bottom: 2rem;
  opacity: 0.8;
  flex-grow: 1;
}

.lightbox-actions {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
}

.lightbox-action-btn {
  padding: 0.8rem 1.5rem;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.lightbox-action-btn.primary {
  background: var(--accent);
  color: var(--text-dark);
}

.lightbox-action-btn.secondary {
  background: transparent;
  color: var(--text-light);
  border: 1px solid rgba(245, 245, 220, 0.3);
}

.lightbox-action-btn:hover {
  transform: translateY(-2px);
}

.lightbox-metadata {
  border-top: 1px solid rgba(245, 245, 220, 0.1);
  padding-top: 1rem;
}

.metadata-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.5rem;
}

.metadata-label {
  opacity: 0.7;
}

.metadata-value {
  font-weight: 600;
}

/* RESPONSIVE DESIGN */
@media (max-width: 768px) {
  .desktop-scroller {
    display: none;
  }

  .mobile-scroller {
    display: block;
  }

  .scroller-tooltip {
    left: 50%;
    bottom: 70px;
    top: auto;
    transform: translateX(-50%);
  }

  .scroller-tooltip::after {
    right: 50%;
    bottom: -8px;
    top: auto;
    transform: translateX(50%);
    border: 4px solid transparent;
    border-top-color: var(--primary);
    border-left-color: transparent;
  }

  .poster-quotes {
    display: none;
  }

  .social-links-hero {
    top: 1rem;
    right: 1rem;
  }

  .poster-credits {
    bottom: 1rem;
    left: 1rem;
    right: 1rem;
  }

  .hero-content {
    padding: 1rem;
  }

  .section {
    padding: 3rem 1rem;
  }

  .blog-card {
    grid-template-columns: 1fr;
    gap: 0;
  }

  .blog-content {
    padding: 2rem 1.5rem;
  }

  .about-stats {
    gap: 1rem;
  }

  .stat-number {
    font-size: 2rem;
  }

  .lightbox-content {
    grid-template-columns: 1fr;
    min-height: auto;
  }

  .lightbox-info {
    max-height: 50vh;
    overflow-y: auto;
  }
}

/* Hide scrollbars but keep functionality */
.scroller-track::-webkit-scrollbar {
  width: 4px;
  height: 4px;
}

.scroller-track::-webkit-scrollbar-track {
  background: transparent;
}

.scroller-track::-webkit-scrollbar-thumb {
  background: rgba(245, 245, 220, 0.3);
  border-radius: 2px;
}

.scroller-track::-webkit-scrollbar-thumb:hover {
  background: rgba(245, 245, 220, 0.5);
}
